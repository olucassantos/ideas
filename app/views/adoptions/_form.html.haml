= form_for @adoption do |f|
  - if @adoption.errors.any?
    #error_explanation
      %h2= "#{pluralize(@adoption.errors.count, "error")} prohibited this adoption from being saved:"
      %ul
        - @adoption.errors.full_messages.each do |msg|
          %li= msg

  .field
    %p#label Selecione o Usuário
    = f.collection_select :theory_id, Theory.all, :id , :title, name: 'adoption[theory_id]'
  .field
    %p#label Selecione o Usuário
    = f.collection_select :user_id, User.all, :id , :name, name: 'adoption[user_id]'
  .actions
    = f.submit 'Salvar', class: 'enter'
