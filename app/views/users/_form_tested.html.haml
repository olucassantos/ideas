= form_for(@user, :html =>{:multipart => true}) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2 Algo impediu que fosse salvo este usuÃ¡rio:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :email
    %br/
    = f.email_field :email
  .field
    = f.label :code
    %br/
    = f.password_field :plain_code
  .field
    = f.label :phone
    %br/
    = f.telephone_field :phone
  .field
    = "Data de nasc."
    %br/
    = f.date_select :age, start_year: 100.years.ago.year, end_year: 10.years.ago.year
  .field
    = f.label :about
    %br/
    = f.text_area :about
    = render 'shared/image_field', :f => f
  .actions
    = f.submit
