= form_for(@theory, :html =>{:multipart => true}) do |f|
  -if @theory.errors.any?
    #error_explanation
      %h2
        = "Algo não me deixou salvar esta ideia."
        %br
        = "Não esqueça de colocar a imagen Novamente."

      %ul
        - @theory.errors.full_messages.each do |msg|
          %center
            = msg
  = render 'shared/image_field', f: f
  %br
  %br
  .field
    -if session[:kind] == 2
      = hidden_field_tag :user_id, params[:user]
      = f.select :user_id, @users.map {|u| [u.name,u.id]}, prompt: 'Selecione o usuário:'
  .field
    .Text Titulo:
    %br/
    = f.text_field :title
    %br
    %br
  .field
    .Text Descrição:
    %br/
    = f.text_area :description, class: "redactor", rows: 40, cols: 100
  .field
    .Text Justificativa:
    %br/
    = f.text_area :justification, class: "redactor", rows: 40, cols: 100
  .field
    .Text Resumo:
    %br/
    = f.text_area :brief, maxlength: 255
  .field
    .Text Gastos:
    %br/
    R$
    = f.text_field :outlay
    %br
    %br
    %hr.horizontalrule
  .ultrabox
    .field
      .desc Em que as pessoas podem te ajudar?
      %table
        %tr
          %th= f.radio_button :choice, true, checked: true
          %th.choi= f.label "A desenvolver minha ideia."
        %tr
          %th= f.radio_button :choice, false
          %th.choi= f.label "Me financiando"
    %hr.horizontalrule
    .field
      .desc Todos podem adotar sua ideia?
      %table
        %tr
          %th= f.radio_button :kind, true, checked: true
          %th.choi= f.label "Sim"
        %tr
          %th= f.radio_button :kind, false
          %th.choi= f.label "Não"
    %hr.horizontalrule
    .field
      .desc Categorias:
      %br/
      %table
      - Category.find(:all).each do |category|
        %tr
          %th= check_box_tag "theory[category_ids][]", category.id, @theory.categories.include?(category)
          %th.choi= category.title
  .actions
    = f.submit